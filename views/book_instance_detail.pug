extend layout 

block content
    h1 ID: #{bookinstance.id}

    p #[strong Title:]
        a(href=bookinstance.book.url) #{bookinstance.book.title}
    p #[strong Imprint:] #{bookinstance.imprint}

    p #[strong Status:]
        if bookinstance.status=='Availabe'
            p.text-success #{bookinstance.status}
        else if bookinstance.status=='Maintenance'
            p.text-danger #{bookinstance.status}
        else 
            p.text-warning #{bookinstance.status}

    if bookinstance.status!='Availabe'
        p #[strong Due Back:] #{bookinstance.due_back_formatted}
    
    hr
    p 
        a(href=bookinstance.url+'/delete') Delete instance
    p 
        a(href=bookinstance.url+'/update') Update instance
